// Place your key bindings in this file to override the defaultsauto[]
[  
    //! Terminal
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.terminal.resizePaneRight",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.terminal.resizePaneLeft",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  //! FILE TREE
    {
      "key": "ctrl+d",
      "command": "runCommands",
      "args": {
        "commands": [
          "list.focusDown",
          "list.focusDown",
          "list.focusDown",
        ]
      },
      "when": "filesExplorerFocus && !inputFocus"
    },
    {
      "key": "ctrl+u",
      "command": "runCommands",
      "args": {
        "commands": [
          "list.focusUp",
          "list.focusUp",
          "list.focusUp",
        ]
      },
      "when": "filesExplorerFocus && !inputFocus"
    },
    {
      "key": "space o",
      "command": "runCommands",
      "args": {
        "commands": [
            "workbench.action.quickOpen"
        ]
      },
      "when": "filesExplorerFocus && !inputFocus"
    },
   {
    // c + p → Relativen Pfad kopieren
    "key": "c p",
    "command": "copyRelativeFilePath",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    // c + P → Absoluten Pfad kopieren (Shift + P)
    "key": "c shift+p",
    "command": "copyFilePath",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "command": "workbench.action.toggleSidebarVisibility",
    "key": "ctrl+e"
  },
  {
    "command": "workbench.files.action.focusFilesExplorer",
    "key": "ctrl+e",
    "when": "editorTextFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "z",
    "command": "workbench.files.action.collapseExplorerFolders",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "filesExplorer.cut",
    "key": "x",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && !inputFocus"
  },
  //
  {
    "key": "ctrl+c",  // or another keybinding of your choice
    "command": "editor.action.clipboardCopyAction", 
    "when": "editorTextFocus && vim.mode == 'Visual'",
  },
  {
    "key": "ctrl+shift+enter",  // or another keybinding of your choice
    "command": "markdown.extension.editing.toggleList", 
    "when": "editorTextFocus && (vim.mode == 'Normal' |/*  */| vim.mode == 'VisualLine')"
  },

  //! Menu bar
  // {
  //     "key": "j",
  //     "command": "keydown",
  //     "when": "menuBarVisible"
  // },
  // {
  //     "key": "k",
  //     "command": "workbench.action.quickOpenNavigatePrevious",
  //     "when": "menuBarVisible"
  // },
  //! EXTRA
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup"
  },
  {
    "key": "ctrl+shift+5",
    "command": "editor.emmet.action.matchTag"
  },
  {
    "key": "ctrl+z",
    "command": "workbench.action.toggleZenMode"
  },
    {
        "key": "alt+c",
        "command": "-workbench.action.terminal.toggleFindCaseSensitive",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+c",
        "command": "-toggleSearchEditorCaseSensitive",
        "when": "inSearchEditor && searchInputBoxFocus"
    },
    {
        "key": "alt+c",
        "command": "-toggleFindCaseSensitive",
        "when": "editorFocus"
    },
    {
        "key": "alt+c",
        "command": "-toggleSearchCaseSensitive",
        "when": "searchViewletFocus"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-editor.action.insertLineBefore",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-notebook.cell.insertCodeCellAbove",
        "when": "notebookCellListFocused && !inputFocus"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-list.toggleSelection",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-search.action.replaceAllInFile",
        "when": "fileMatchFocus && isEditableItem && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "-search.action.replaceAllInFolder",
        "when": "folderMatchFocus && isEditableItem && replaceActive && searchViewletVisible"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "md-shortcut.toggleCheckboxes",
        "when": "editorTextFocus && markdownShortcuts:enabled"
    },
    {
        "key": "ctrl+m ctrl+x",
        "command": "-md-shortcut.toggleCheckboxes",
        "when": "editorTextFocus && markdownShortcuts:enabled"
    },
    {
        "key": "ctrl+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "ctrl+n",
        "command": "foam-vscode.create-note"
    },
    {
        "key": "ctrl+shift+alt+n",
        "command": "explorer.newFolder"
    },
    {
      "key": "ctrl+[Period]",
      "command": "-workbench.action.terminal.showQuickFixes",
      "when": "terminalFocus"
    },
    {
      "key": "ctrl+[Semicolon]",
      "command": "workbench.action.terminal.toggleTerminal",
      "when": "terminal.active"
    },
    {
      "key": "ctrl+shift+[Equal]",
      "command": "-workbench.action.terminal.toggleTerminal",
      "when": "terminal.active"
    },
    {
      "key": "ctrl+shift+v",
      "command": "markdown.showPreviewToSide",
      "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
      "key": "ctrl+k v",
      "command": "-markdown.showPreviewToSide",
      "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
      "key": "ctrl+shift+v",
      "command": "-markdown.showPreview",
      "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
    "key": "ctrl+shift+l",
    "command": "workbench.action.increaseViewSize",
    "when": "editorTextFocus && vim.active"
    },
    {
      "key": "ctrl+shift+h",
      "command": "workbench.action.decreaseViewSize",
      "when": "editorTextFocus && vim.active"
    },
    //! Listen
    {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen"
    },
    {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpen"
    },
    //! Autocomplete
    {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible && editorTextFocus"
    },
    {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible && editorTextFocus"
    },
    //! close window 
    {
    "key": "space+q",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus || markdownPreviewFocus"
    },
    {
      "key": "ctrl+shift+s",
      "command": "workbench.action.toggleActivityBarVisibility",
    },
    {
      "key": "ctrl+shift+c",
      "command": "-workbench.action.terminal.openNativeConsole",
      "when": "!terminalFocus"
    },
    {
      "key": "ctrl+g f",
      "command": "revealFileInOS",
      "when": "editorFocus"
    },
    {
      "key": "ctrl+alt+r",
      "command": "-revealFileInOS",
      "when": "!editorFocus"
    },
    {
      "key": "ctrl+shift+t",
      "command": "-workbench.action.reopenClosedEditor"
    },
    {
      "key": "ctrl+shift+t",
      "command": "workbench.view.extension.todo-tree-container"
    },
    {
      "key": "ctrl+shift+[Semicolon]",
      "command": "workbench.action.createTerminalEditor"
    },
]
